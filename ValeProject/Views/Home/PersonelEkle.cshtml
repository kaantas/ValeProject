                                        <option>Çerkezköy,Tekirdağ</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group" id="personelDiv">
                                <label for="email" class="cols-sm-2 control-label">Personel Tipi</label>
                                <div class="cols-sm-10">
                                    <select id="personelTipi" name="personelTipi" onchange="validate();" class="form-control input-md">
                                        <option value="Şoför">Şoför</option>
                                        <option value="Muavin">Muavin</option>
                                        <option value="Admin">Admin</option>
                                    </select>
                                </div>
                            </div>

                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Ekle" style="color: white">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>