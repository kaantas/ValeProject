
<script>
    function validate() {
        var ddl = document.getElementById("personelTipi");
        var selectedValue = ddl.options[ddl.selectedIndex].value;
        if (selectedValue == "Admin") {
            var adminDiv = document.getElementById("adminDiv");
            adminDiv.style.visibility = "visible";
            adminDiv.style.display = "inline";
            document.getElementById("personelDiv").style.marginTop = "85px";
        } else {
            var adminDiv = document.getElementById("adminDiv");
            adminDiv.style.visibility = "hidden";
            adminDiv.style.display = "none";
            document.getElementById("personelDiv").style.marginTop = "";
        }
    }
</script>
<div class="container" style="padding-top: 55px;">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Personel Ekle</h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form" action="/Home/PersonelEkle" method="post">
                        <fieldset>
                            <div class="form-group">
                                <label for="email" class="cols-sm-2 control-label">Ad</label>
                                <div class="cols-sm-10">
                                    <input type="text" name="ad" class="form-control input-md">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="cols-sm-2 control-label">Soyad</label>
                                <div class="cols-sm-10">
                                    <input type="text" name="soyad" class="form-control input-md">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="cols-sm-2 control-label">Cinsiyet</label>
                                <div class="cols-sm-10">
                                    <select id="" name="cinsiyet" class="form-control input-md">
                                        <option>Erkek</option>
                                        <option>Kız</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="cols-sm-2 control-label">Email</label>
                                <div class="cols-sm-10">
                                    <input type="email" name="email" class="form-control input-md">
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 85px;">
                                <div class="col-md-8">
                                    <label for="email" class="cols-sm-2 control-label">Telefon</label>
                                    <div class="cols-sm-10">
                                        <input type="tel" name="telefon" class="form-control input-md">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label for="email" class="cols-sm-2 control-label">Maaş</label>
                                    <div class="cols-sm-10">
                                        <input type="text" name="maas" class="form-control input-md">
                                    </div>
                                </div>                          
                            </div>
                            <div class="form-group">
                                <label for="email" class="cols-sm-2 control-label">Adres</label>
                                <div class="cols-sm-10">
                                    <input type="text" name="adres" class="form-control input-md">
                                </div>
                            </div>
                            <div id="adminDiv" class="form-group" style="display: none;visibility: hidden;">
                                <div class="col-md-5">
                                    <label for="email" class="cols-sm-2 control-label">Şifre</label>
                                    <div class="cols-sm-10">
                                        <input type="tel" name="sifre" class="form-control input-md">
